json.data(@pages) do |page|
	json.id         page.id
	json.name       page.name
	json.slug       page.slug
	json.template   page.template
	json.parent_id  page.parent_id
	json.parent_ids page.parent_ids
  json.content_node_type page.content_node_type
  if page.content_node
    json.content_node_id page.content_node.id
  end
end
json.count @pages.count