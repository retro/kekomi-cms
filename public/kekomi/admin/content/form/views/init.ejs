<% if(model.attr('isPageContent')){ %>
	<div class="form-horizontal">
		<div class="content-form form-wrapper">
			<% list(contentType.attr('fields'), function(field, i){ %>
				<div <%= (el)-> renderField(el, field, model, field.name)%> class="content-type-level"></div>
			<% }) %>
		<div>
	</div>
<% } else { %>

	<form class="form-horizontal">
		<div class="content-form form-wrapper">
			<% list(contentType.attr('fields'), function(field, i){ %>
				<div <%= (el)-> renderField(el, field, model, field.name)%> class="content-type-level"></div>
			<% }) %>
			<div class="publish-options">
				<div class="control-group">
					<label class="control-label checkbox">
						<input type="checkbox" name="content[is_published]" value="1" /> Publish
					</label>
					<div class="controls publish-controls clearfix">
						<div class="publish-date-time attr-wrap">
							<label>Publish at</label>
							<input type="text" />
							<i class="icon-calendar"></i>
						</div>
						<div class="section attr-wrap">
							<label>Section</label>
							<select name="content[section_id]">
								<option value="">Select section</option>
								<%== pagesTree %>
							</select>
						</div>
						<div class="tags attr-wrap">
							<label>Tags</label>
							<input type="hidden" name="content[tags]" class="tags-input" value="">
						</div>
					</div>
				</div>
			</div>
			<div class="actions-bar clearfix">
				<input type="submit" value="Save Page" class="btn btn-primary" />
			</div>
			
		<div>
	</form>

<% } %>