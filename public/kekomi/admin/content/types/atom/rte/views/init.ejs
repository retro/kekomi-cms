<div class="control-group">
	<label class="control-label">
		<% if(this.collection){ %>
			<i class="icon-sort"></i>
		<% } %>
		<%= this.collection ? field.name : attr %>
		<% if(this.collection){ %>
			<span class="remove"><i class="icon-remove-sign"></i> Remove</span>
		<% } %>
	</label>
	<div class="controls">
		<div class="editor" contenteditable="true"><%== this.model.readAttr(this.attr) %></div>
	</div>
</div>